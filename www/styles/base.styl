// -------------------------------------
//   Base
// -------------------------------------
// -- variables | layout | typography
// -------------------------------------


// -------------------------------------
//   Variables
// -------------------------------------

$white = rgb(255, 255, 255)
$black = rgb(0, 0, 0)
$goBlue = rgb(0, 40, 84)
$maize = rgb(255, 203, 11)

$primary = #CF6059
$offWhite = #ebe0dd
$offPink = #D9B5B6
//$primary = #7A9EA8

boxShadowLight()
  box-shadow 0 7px 15px rgba(0,0,0,0.12), 0 1px 2px rgba(0,0,0,0.24)

boxShadow()
  box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)

$mobile = "screen and (min-width: 320px)"
$iphone6 = "screen and (min-width: 360px)"
$iphonePlus = "screen and (min-width: 414px)"
$logoBp = "screen and (min-width: 645px)"
$tablet = "screen and (min-width: 768px)"
$desktop = "screen and (min-width: 960px)"

// -------------------------------------
//   Layout
// -------------------------------------

*
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

body
  width 100%
  height 100% 
  background $white

section
  position relative
  display block
  float left
  width 100%
  height 100%
  overflow auto
      
.l-section-container
  width 100%
  max-width 1040px
  margin 0 auto
  padding 25px
  
  @media $tablet
    padding 50px
    
.l-flex-col
  display -webkit-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  -webkit-flex-direction column
  -ms-flex-direction column
  flex-direction column
  -webkit-align-items center
  align-items center
  -webkit-justify-content center
  justify-content center
  width 100%
  
.l-col-reverse
  @media $tablet
    -webkit-flex-direction column-reverse
    -ms-flex-direction column-reverse
    flex-direction column-reverse
    
.l-flex-row
  display -webkit-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  -webkit-flex-direction column
  -ms-flex-direction column
  flex-direction column
  -webkit-align-items center
  align-items center
  -webkit-justify-content center
  justify-content center
  width 100%
  
  @media $tablet
    -webkit-flex-direction row
    -ms-flex-direction row
    flex-direction row
  
.l-row-reverse
  @media $tablet
    -webkit-flex-direction row-reverse
    -ms-flex-direction row-reverse
    flex-direction row-reverse

.flex
  -webkit-flex 1 
  -ms-flex 1 
  flex 1
  
.site-line
  display block
  margin 20px auto
  border 0
  outline 0
  height 1px
  width 100px
  background $primary 
  
// -------------------------------------
//   Typography
// -------------------------------------
  
h1, h2, h3, h4, h5, h6, p, span, li
  color $white
  
h1
  font 24px/32px 'Nixie One', cursive
  
  @media $tablet
    font 32px/32px 'Nixie One', cursive
  
h2, 
h3
  font 28px/28px 'Nixie One', cursive
  

h4, 
h5, 
h6
  font 22px/32px 'Nixie One', cursive
  
  @media $tablet
    font 28px/32px 'Nixie One', cursive
  
p,
span,
li
  font 400 14px/24px 'Lato', sans-serif

a
  color $white
  font 700 16px/24px 'Lato', sans-serif
