#content
	background $primary 
	boxShadowLight()
	
	.icon-asterisk-fill
		fill $primary

.content-container
	width 100%
	
	.three
		-webkit-flex 1
		-ms-flex 1
		flex 1
		text-align center
		width 100%
		margin 0 10px 20px 10px 
		padding 20px
		background $white 
		-webkit-border-radius 4px 
		border-radius 4px 
		boxShadow()
		
		&:first-child,
		&:last-child 
			border 0
			
		&:last-child
			margin-bottom 0
				
		@media $tablet
			margin 0 20px
			padding 25px 5px
			
			&:first-child
				margin-left 0
				
			&:last-child
				margin-right 0
				margin-bottom 0
		
		h4
			margin 20px 0
			color $primary
	
			@media screen and (min-width: 384px) and (max-width: 768px)
				br
					display none
					
			@media $tablet				
				br
					display block
				
			@media screen and (min-width: 768px) and (max-width: 860px)
				font-size 25px 
		
		ul
			padding 0
			margin 0
			
			li
				padding 5px 0
				margin 0
				list-style none
				color $primary
				
				&:first-child
					padding-top 0
				
				&:last-child
					padding-bottom 20px
				
				@media $tablet 
					padding 10px 0