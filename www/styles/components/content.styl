		h4
			margin 20px 0
			color $primary
			
			br
				display none
							
			@media $tablet
				
				br
					display block
		
		ul
			padding 0
			margin 0
			
			li
				padding 5px 0
				margin 0
				list-style none
				color $primary
				
				&:last-child
					padding-bottom 20px
				
				@media $tablet 
					padding 10px 0