#content
	background $primary 
	boxShadow()
	
	.icon-asterisk-fill
		fill $primary
		
	hr
		margin 20px 33%
		outline none 
		border-bottom-color $primary

.content-container
	width 100%
	
	.three
		-webkit-flex 1
		-ms-flex 1
		flex 1
		text-align center
		width 100%
		margin 0 10px 20px 10px 
		padding 20px
		background $white 
		-webkit-border-radius 4px 
		border-radius 4px 
		boxShadow()
		
		&:first-child,
		&:last-child 
			border 0
				
		@media $tablet
			margin 0 20px 20px 20px
			padding 25px 5px
			
			&:first-child
				margin-left 0
				
			&:last-child
				margin-right 0
		
		h4
			margin 20px 0
			color $primary
			
			br
				display none
							
			@media $tablet
				
				br
					display block
		
		ul
			padding 0
			margin 0
			
			li
				padding 5px 0
				margin 0
				list-style none
				color $primary
				
				&:last-child
					padding-bottom 20px
				
				@media $tablet 
					padding 10px 0