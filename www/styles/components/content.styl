#content
	background $primary 
	boxShadow()
	
	.icon-asterisk-fill
		fill $primary
		
	hr
		margin 20px 33%
		border-bottom-color $primary

.content-container
	width 100%
	
	.three
		width 100%
		float left
		text-align center
		margin-bottom 20px
		padding 20px
		background $white 
		-webkit-border-radius 4px 
		border-radius 4px 
		boxShadow()
		
		&:first-child,
		&:last-child 
			border 0
				
		@media $tablet
			width 30.333333333%
			margin 0 1.5%
			padding 25px
			
