#content
	background transparent
	
	.icon-asterisk-fill
		fill $offWhite
		
	hr
		margin-left 33%
		margin-right 33%

.content-container
	width 100%
	
	.three
		width 100%
		float left
		text-align center
		padding 0
		margin 0
		
		
		&:first-child
			border-right 2px dotted rgba($offWhite, 1)
			// -webkit-border-image url('../images/icon-asterisk-white.png') 15px repeat /* Safari 3.1-5 */
			// -o-border-image url('../images/icon-asterisk-white.png') 15px repeat /* Opera 11-12.1 */
			// border-image url('../images/icon-asterisk-white.png') 15px repeat
			
		&:last-child
			border-left 2px dotted rgba($offWhite, 1)
			// -webkit-border-image url('../images/icon-asterisk-white.png') 15px repeat /* Safari 3.1-5 */
			// -o-border-image url('../images/icon-asterisk-white.png') 15px repeat /* Opera 11-12.1 */
			// border-image url('../images/icon-asterisk-white.png') 15px repeat
				
		@media $tablet
			width 30.333333333%
			margin 0 1.5%
			padding-top 25px
		
		h4
			margin 15px 0
			
			@media $tablet
				margin 35px 0
		
		ul
			padding 0
			margin 0
			
			li
				padding 5px 0
				margin 0
				list-style none
				&:last-child
					padding-bottom 20px
				
				@media $tablet 
					padding 10px 0