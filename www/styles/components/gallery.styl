#gallery
  background $white
  
  h1
  	color $primary

#slick
  position relative
  width 100%
  height 100%
  text-align center
  
  a
  	text-align center

  div
    width 100%
    height 100%
    display block
    outline none

    img
      display inline-block
      box-sizing border-box
      outline none
      width 100%
      max-width 100px

      @media screen and (min-width: 1024px)
        width 100%
        max-width 200px
        height initial

  ul
    padding-left 0
    margin-left 0
    display block
    width 100%
    position absolute
    bottom: -12px;

    li
      display inline-block
      background-color #8bbaff
      border-radius 100%
      height 6px
      width 6px
      margin-left 3px
      margin-right 3px

      @media screen and (min-width: 768px)
        height 8px
        width 8px

      button
        font-size 0
        line-height 0
        display block
        width 20px
        height 20px
        padding 5px
        cursor pointer
        color transparent
        border 0
        outline none
        background transparent

    .slick-active
      background-color #ffd800