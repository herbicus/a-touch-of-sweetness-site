#gallery
  
  h1
    color $primary
    text-transform uppercase
    letter-spacing 4px
  	
.gallery-divider
  width 100%
  height 50px
  background-color $primary
  background-image url('../images/icon-asterisk-white.png')
  background-repeat no-repeat
  background-position center center
  -webkit-background-size 25px 
  -o-background-size 25px 
  background-size 25px
  boxShadow() 
  padding 2px 0
 
.title-cakes
  background rgba(0,0,0,0)
  
  @media screen and (min-width: 481px)
    background url('../images/title-bg-cakes.png')no-repeat center center
    -webkit-background-size contain
    -o-background-size contain
    background-size contain
    

.title-cupcakes
  background rgba(0,0,0,0)
  
  @media screen and (min-width: 550px)
    background url('../images/title-bg-cupcakes.png')no-repeat center center
    -webkit-background-size contain
    -o-background-size contain
    background-size contain

.title-carvings
  background rgba(0,0,0,0)
  
  @media screen and (min-width: 824px)
    background url('../images/title-bg-carvings.png')no-repeat center center
    -webkit-background-size contain
    -o-background-size contain
    background-size contain
		
#slick
  position relative
  width 100%
  height 100%
  text-align center
  
  a
  	text-align center

  div
    width 100%
    height 100%
    display block
    outline none

    img
      display inline-block
      outline none
      width 100%
      max-width 100px
      -webkit-box-sizing border-box
      -moz-box-sizing border-box
      box-sizing border-box

      @media screen and (min-width: 1024px)
        width 100%
        max-width 200px
        height initial

  ul
    padding-left 0
    margin-left 0
    display block
    width 100%
    position absolute
    bottom: -12px;

    li
      display inline-block
      background-color #8bbaff
      border-radius 100%
      height 6px
      width 6px
      margin-left 3px
      margin-right 3px

      @media screen and (min-width: 768px)
        height 8px
        width 8px

      button
        font-size 0
        line-height 0
        display block
        width 20px
        height 20px
        padding 5px
        cursor pointer
        color transparent
        border 0
        outline none
        background transparent

    .slick-active
      background-color #ffd800
      
.slider-container
    position relative
    box-sizing border-box
    
.slick-slide
  padding 0 0 20px 0
  
  img
    width 100%
    max-width 250px
    boxShadow()
    -webkit-border-radius 4px 
    border-radius 4px   

.left-arrow-cakes,
.right-arrow-cakes,
.left-arrow-cupcakes,
.right-arrow-cupcakes,
.left-arrow-fruit-carvings,
.right-arrow-fruit-carvings
  position absolute
  top 50%
  display inline-block
  cursor pointer

.left-arrow-cakes,
.left-arrow-cupcakes
.left-arrow-fruit-carvings
  left 0

  @media screen and (min-width: 768px)
    left -25px

.right-arrow-cakes,
.right-arrow-cupcakes,
.right-arrow-fruit-carvings
  right 0

  @media screen and (min-width: 768px)
    right -25px

.left-arrow-cakes img,
.right-arrow-cakes img,
.left-arrow-cupcakes img,
.right-arrow-cupcakes img,
.left-arrow-fruit-carvings img,
.right-arrow-fruit-carvings img
  height 30px
  display none
  
  @media screen and (min-width: 768px)
    display block