// ----- email form feild styles
// -------------------------------------

#emailForm
  position fixed
  width 100%
  max-width 500px
  padding 25px
  height auto
  background $white
  boxShadow()
  -webkit-border-radius 4px 
  border-radius 4px  
  top 50%
  left 50%
  z-index 5 
  -webkit-transform translate(-50%, -50%)
  -moz-transform translate(-50%, -50%)
  -ms-transform translate(-50%, -50%)
  -o-transform translate(-50%, -50%)
  transform translate(-50%, -50%)
   
  form
    margin 0
     
  .flex
    display block

  form label
    margin-bottom .2em
    font-size 1.3rem
    line-height 1.3rem
    font-size 13px
    line-height 13px
    color $primary

  form label.error
    margin-bottom 1em
    font-size 1.2rem
    line-height 1.2rem
    font-size 12px
    line-height 12px
    color $orange

  form input[type="text"], form textarea
    margin-bottom 1.25em
    font-family "Lato", sans-serif
    font-size 1.4rem
    line-height 1.4rem
    font-size 14px
    line-height 14px
    box-shadow none
    -moz-box-shadow none
    -webkit-box-shadow none
    background $creme
    border 1px solid $primary
    -moz-border-radius 0.2em
    -webkit-border-radius 0.2em
    border-radius 0.2em

  form input[type="text"] focus, form textarea focus
    border-color $primary
    box-shadow none
    -moz-box-shadow none
    -webkit-box-shadow none

  form input[type="text"][disabled], form textarea[disabled]
    background $creme

  form input[type="text"].error, form textarea.error
    background $creme
    border-color $primary

  fieldset
    border 0px
    margin 0
    padding 0

  .required
    color $orange

  #success, #error
    display none

  #success span, #erro span
    display block
    position absolute
    top 0
    width 100%

  #success span p, #error span p
    margin-top 6em

  #success span p
    color $green

  #error span p
    color $orange
