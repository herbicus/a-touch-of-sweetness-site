.l-site-nav
  height auto
    
.l-site-nav nav
  left 0
  width auto
  padding 0 2%
  ul
    min-height auto
    width auto
    float right
    border 0
    padding 0
    margin 0
    li
      display inline-block
      margin 0 10px
      border-left 1px solid black
      padding-left 25px
      margin 25px 25px 0 0
      
      &:first-child
        border-left none
      a
        color black
        text-decoration none
        letter-spacing 1px
      
    
  

