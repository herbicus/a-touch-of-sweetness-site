.l-site-nav
  position fixed
  width 100%
  height 50px
  z-index 104
  background $white
  boxShadowLight()
  display -webkit-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  -webkit-flex-direction row
  -ms-flex-direction row
  flex-direction row
 
  
  // mobile logo
  .logo
    svg 
      width 125px
      height auto
      display block
      margin 0 auto
      z-index 100
          
      .icon-logo-fill
        fill $primary
        
      @media screen and (min-width: 835px)
        display none
  
.logo-lockup
  position relative
  bottom 17px
  left 10px
  width 100% 
  max-width 255px 
  -webkit-flex 1
  -ms-flex 1
  flex 1 
  
.logo-lockup-fill
  fill $primary
  
  @media $tablet
    fill $primary
    
// desktop nav styles
.nav-desktop
  left 0
  width auto
  -webkit-flex 1
  -ms-flex 1
  flex 1

  ul
    position relative
    float right
    top 3px
    border 0
    padding 0
    margin 0
    li
      display inline-block
      border-left 1px solid $primary
      padding-left 25px
      margin 10px 25px 0 0
      
      &:first-child
        border-left none
        
      &:hover > a
        color darken($primary, 15)
        
      a
        font-family 'Lato', sans-serif
        font-weight 400
        text-decoration none
        letter-spacing 2px
        color $primary
        -webkit-transition color 0.3s ease-in-out 
        -moz-transition color 0.3s ease-in-out 
        -ms-transition color 0.3s ease-in-out 
        -o-transition color 0.3s ease-in-out 
        transition color 0.3s ease-in-out 
        
// mobile nav styles
.nav-mobile
  width 150px
  text-align center
  ul
    position absolute
    top 0
    boxShadow()
    right -225px
    background #fefefe
    width 200px
    margin 0
    padding 0
    height 100vh
    
    li
      list-style none
      padding-top 10px
      padding-bottom 10px
      padding 20px 0
      
      &:first-child
        padding-top 50px
      
      &:last-child
        border-bottom none
      
    li a
      color $primary
      text-decoration none
      letter-spacing 2px
      
.nav-mobile
  display block
  
  @media screen and (min-width: 835px)
    display none
  
.nav-desktop
  display none
  
  @media screen and (min-width: 835px)
    display block
