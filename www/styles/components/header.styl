.l-site-nav
  position fixed
  width 100%
  height 50px
  z-index 100
  // background $white
    
  @media $tablet
    width 100% 
  
.logo-lockup
  position relative
  bottom 19px
  left 25px
  float left
  width 255px 
  display none
  
  @media $tablet
    display block
   
  
.logo-lockup-fill
  fill $offWhite
  //fill $primary
    
// desktop nav styles
.nav-desktop
  left 0
  width auto
  padding 0 25px

  ul
    float right
    border 0
    padding 0
    margin 0
    li
      display inline-block
      border-left 1px solid $offWhite
      padding-left 25px
      margin 10px 25px 0 0
      
      &:first-child
        border-left none
      a
        font-family 'Lato', sans-serif
        font-weight 400
        text-decoration none
        letter-spacing 2px
        color $offWhite
        
.btn-logo-hamburger
  svg   
    position absolute
    top 10px
    left 10px
    width 75px
    height auto
    display block
    z-index 100
        
    .icon-logo-fill
      fill $offWhite
      
    @media $tablet
      display none
        
// mobile nav styles
.nav-mobile
  width 150px
  text-align center
  ul
    position absolute
    top 0
    right -150px
    background $offPink 
    width 150px
    margin 0
    padding 0
    height 100vh
    border-left 3px solid $primary
    border-right 3px solid $primary
    
    li
      list-style none
      padding-top 10px
      padding-bottom 10px
      padding 20px 0
      border-top 1px solid $primary
      border-bottom 1px solid $primary
      
    li a
      color $primary
      text-decoration none
      letter-spacing 2px
      
.nav-mobile
  display block
  
  @media $tablet
    display none
  
.nav-desktop
  display none
  
  @media $tablet
    display block
    
.btn-hamburger-toggle
  color $offWhite
  font 400 24px/24px 'Lato', sans-serif
  position absolute
  top 10px
  left -30px
  z-index 101 
