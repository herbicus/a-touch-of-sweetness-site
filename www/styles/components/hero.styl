.l-flex-hero
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  -webkit-flex-direction column
  -moz-flex-direction column
  -ms-flex-direction column
  -o-flex-direction column
  flex-direction column
  -webkit-box-pack center
  -moz-box-pack center
  -ms-flex-pack center
  -webkit-justify-content center
  justify-content center
  -webkit-box-align center
  -moz-box-align center
  -ms-flex-align center
  -webkit-align-items center
  align-items center
  width 100%
  
  @media $logoBp
    -webkit-flex-direction row
    -moz-flex-direction row
    -ms-flex-direction row
    -o-flex-direction row
    flex-direction row
  
.l-hero-reverse
  @media $logoBp
    -webkit-flex-direction row-reverse
    -moz-flex-direction row-reverse
    -ms-flex-direction row-reverse
    -o-flex-direction row-reverse
    flex-direction row-reverse

#hero
  background #D9B5B6
  background url("../images/bg-hero-mobile-1.jpg")no-repeat center center 
  padding-top 50px
  -webkit-background-size cover 
  -o-background-size cover 
  background-size cover
  height 100%
  min-height 100vh 
  display -webkit-box
  display -moz-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  -webkit-flex-direction column
  -moz-flex-direction column
  -ms-flex-direction column
  -o-flex-direction column
  flex-direction column
  -webkit-box-pack center
  -moz-box-pack center
  -ms-flex-pack center
  -webkit-justify-content center
  justify-content center
  -webkit-box-align center
  -moz-box-align center
  -ms-flex-align center
  -webkit-align-items center
  align-items center

  @media $logoBp
    background #D9B5B6
    background url("../images/bg-hero-9_flip.jpg")no-repeat fixed
    background-position-x 50% 
    background-position-y 0
    -webkit-background-size cover 
    -o-background-size cover 
    background-size cover
    
  // portrait
  // ipad & nexus tab
  @media only screen and (min-device-width: 768px) and (max-device-width: 1024px)
    min-height 1px
    max-height 100%
    background url("../images/bg-hero-9_flip_mobile_x2.jpg")no-repeat center bottom
    -webkit-background-size cover 
    -o-background-size cover 
    background-size cover
    
  @media screen and (device-width: 601px) and (device-height: 906px) and (-webkit-min-device-pixel-ratio: 1.331) and (-webkit-max-device-pixel-ratio: 1.332) and (orientation: portrait)
    min-height 1px
    max-height 100%
    background url("../images/bg-hero-9_flip_mobile_x2.jpg")no-repeat center bottom
    -webkit-background-size cover 
    -o-background-size cover 
    background-size cover
    
  .site-line
    margin 0px 0 25px 0
    -webkit-align-self flex-start
    -ms-align-self flex-start
    align-self flex-start
    
    @media screen and (min-width: 995px)
      margin 0px 0 25px 25px
  
  .hero-logo
    padding 0 0 25px 0

    @media $logoBp
      padding 0 0 0 50px

    @media $tablet
      padding 0 0 0 20px

  .logo
    width 100%
    
    svg
      z-index 1
      width 100%
      max-width 100%
      height auto
      max-height 100%
      
      @media screen and (min-width: 480px)
        max-height 200px
      
      @media $logoBp
        max-height 100%
        
      @media $tablet
        max-height 100%
  
  .icon-logo-fill 
    fill $white

    @media $logoBp
      fill $primary
  
  .hero-logo,
  .hero-copy
  	width 100%
  	-webkit-flex 1
    -ms-flex 1
    flex 1
   
   @media $desktop 
    width 50%
    
  .hero-copy
    background $white
    boxShadow()
    -webkit-border-radius 4px 
    border-radius 4px
    padding 10px 20px
    
    h1,
    p
      color $primary
    
    h1
      font-size 37px 
      line-height 46px
      
      @media screen and (min-width: 345px)
        font-size 41px

      @media screen and (min-width: 995px)
        font-size 52px 
        line-height 62px
        letter-spacing 2px
        padding 0 25px
      
    p
      font-weight 300

      @media screen and (min-width: 995px)
        font-size 16px
        line-height 30px
        letter-spacing 1px
        padding 0 25px
    
    
    
