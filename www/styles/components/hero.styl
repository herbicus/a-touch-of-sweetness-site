  .icon-logo-fill 
    fill $white
  
  .hero-logo,
  .hero-copy
  	width 50%
  	float right
   
  .hero-copy
    h1,
    p
      color $white
      color darken($primary, 15)
      padding 0 25px
      text-shadow 0 1px 1px $white 
    
    h1
      font-size 52px 
      line-height 62px
      letter-spacing 2px
      
    p
      font-weight 400
      font-size 18px
      line-height 27px
      letter-spacing 1px 
    
    
    
