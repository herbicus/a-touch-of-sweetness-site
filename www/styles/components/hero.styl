#hero
  display block
  padding-top 100px
  background url("../images/bg-flour_raw-tint.jpg")no-repeat top center
  -webkit-background-size cover 
  -o-background-size cover 
  background-size cover
  
  .hero-logo
    position relative
    background url("../images/bg-bowl-chips_1700x1700_75.png")no-repeat center center
    -webkit-background-size contain 
    -o-background-size contain 
    background-size contain
    width 100%
    max-width 100%

  #logo
    position relative
    width 100%
    max-width 100%
    top 10px
    
    svg
      position relative
      z-index 5
      display block
      width 100%
      max-width 90%
      height auto
      margin 0px auto
      padding 25px
      -webkit-transform scale(0.95)
      -moz-transform scale(0.95)
      -ms-transform scale(0.95)
      -o-transform scale(0.95)
      transform scale(0.95)
      
