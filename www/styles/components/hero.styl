#hero
  // display block
  background #D9B5B6 
  padding-top 50px
  // background url("../images/bg-flour_raw-tint.jpg")no-repeat top center
  // background url("../images/bg-mix-logo.jpg")no-repeat center center
  -webkit-background-size cover 
  -o-background-size cover 
  background-size cover
  height 100%
  min-height 100vh 
  display -webkit-box
  display -ms-flexbox
  display -webkit-flex
  display flex
  -webkit-flex-direction column
  -ms-flex-direction column
  flex-direction column
  -webkit-align-items center
  align-items center
  -webkit-justify-content center
  justify-content center
  
  @media $desktop
    background #D9B5B6
    background url("../images/bg-mix-logo.jpg")no-repeat center center 
    -webkit-background-size cover 
    -o-background-size cover 
    background-size cover
    
  
  .hero-logo
    position relative
    background url("../images/bg-bowl-chips_1700x1700_75.png")no-repeat center center
    -webkit-background-size contain 
    -o-background-size contain 
    background-size contain
    width 100%
    max-width 100% 
    visibility visible
      
    @media $desktop
      visibility hidden

  .logo
    position relative
    width 100%
    max-width 100%
    top 10px
    
    svg
      position relative
      z-index 5
      display block
      width 100%
      max-width 90%
      height auto
      margin 0px auto
      padding 25px
      -webkit-transform scale(0.95)
      -moz-transform scale(0.95)
      -ms-transform scale(0.95)
      -o-transform scale(0.95)
      transform scale(0.95)
      
    // &:before
    //   content ''
    //   position absolute
    //   z-index 1 
    //   width 100%
    //   height 100%  
    //   top 5px
    //   left -10px
    //   opacity 0.85
    //   background url("../images/bg-bowl-chips_1700x1700.png")no-repeat center center
    //   -webkit-background-size contain 
    //   -o-background-size contain 
    //   background-size contain 
  
  .icon-logo-fill 
    fill $offWhite
  
  .hero-logo,
  .hero-copy
  	width 100%
  	-webkit-flex 1
    -ms-flex 1
    flex 1
   
   @media $desktop 
    width 50%
    
  .hero-copy
    background $white
    boxShadow()
    -webkit-border-radius 4px 
    border-radius 4px
    padding 10px 20px
    
    h1,
    p
      color $primary
    
    h1
      font-size 41px
      line-height 46px
      @media $desktop
        font-size 52px 
        line-height 62px
        letter-spacing 2px
        padding 0 25px
      
    p
      
      @media $desktop
        font-weight 300
        font-size 15px
        line-height 30px
        letter-spacing 1px
        padding 0 25px
    
    
    
