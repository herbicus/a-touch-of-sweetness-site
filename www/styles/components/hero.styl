#hero
  background rgba( 0, 0, 0, 0)
  min-height 100vh 
  display block
  background url("../images/bg-flour.jpg")no-repeat top center
  -webkit-background-size cover 
  -o-background-size cover 
  background-size cover
  
  #logo
    position relative
    
    svg
      position relative
      z-index 5
      display block
      width 100%
      max-width 250px
      height auto
      margin 25px auto
      padding 25px 
      
    &:before
      content ''
      position absolute
      z-index 1 
      width 100%
      height 100%  
      top 5px
      left -10px
      opacity 0.85
      background url("../images/bg-bowl-chips_1700x1700.png")no-repeat center center
      -webkit-background-size contain 
      -o-background-size contain 
      background-size contain 
  
  .icon-logo-fill 
    fill $white
  
  #logo,
  .hero-copy
  	width 50%
  	float right
   
  .hero-copy
    h1
      font-size 52px 
      line-height 62px
      letter-spacing 2px
      padding 0 25px
      
  p
    padding 0 25px
    
    
