#home
  background rgba( 0, 0, 0, 0)
  min-height 100vh 
  display block
  background url("../images/bg-cutter.jpg")no-repeat top center
  -webkit-background-size cover 
  -o-background-size cover 
  background-size cover
  
  .icon-logo-fill 
    fill $white
  
  #logo,
  .hero-copy
  	width 50%
  	float right
	
  svg
  	display block
  	width 100%
  	max-width 250px
  	height auto
  	margin 50px auto 0 auto
   
  .hero-copy
    h1
      font-size 52px 
      line-height 62px
      letter-spacing 2px
      padding 0 25px
      
  p
    padding 0 25px
    
  .content-container
    width 100%
    
    .three
      width 30.33333333333%
      float left
      text-align center
      padding 0
      margin 0 1.5%
    
    ul
      padding 0
      margin 0
      li
        padding 10px 0
        margin 0
        list-style none
