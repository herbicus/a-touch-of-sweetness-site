#services
	background $primary
	boxShadowLight()
	
	h1
		text-transform uppercase
		font-size 42px
		line-height 50px
		background rgba(0,0,0,0)
		margin-top 5px
		  
		@media screen and (min-width: 824px)
			background url('../images/title-bg-service.png')no-repeat center center
			-webkit-background-size contain
			-o-background-size contain
			background-size contain
			
		@media $tablet
			font-size 48px
			line-height 52px
			margin-top 0px
			margin-bottom 45px
	
		  
	.service-section
		width 100%
		background $white
		boxShadow()
		padding 25px
		margin 25px 0
		-webkit-border-radius 4px 
		border-radius 4px 
		
		@media $desktop
			padding 50px
			//margin 50px 0

	.service-title-fill
		fill $primary
		
	.service-text
		-webkit-flex 1
		-ms-flex 1
		flex 1
		
		@media $tablet
			-webkit-flex 2
			-ms-flex 2
			flex 2
		
	.service-title
		-webkit-flex 1
		-ms-flex 1
		flex 1

	.service-title
		text-align center

	svg
		margin 0 auto
		width 100%
		max-width 200px
		
		@media screen and (min-width: 768px) and (max-width: 960px)
			max-width 165px

		@media $desktop
			max-width 185px

	p
		font-size 16px
		line-height 24px
		letterspacing 1px
		padding 0
		margin 0
		color $primary
		
		@media $tablet
			font-size 18px
			line-height 30px
			padding 0 25px
			
	span
		color $primary
		margin 10px 0 0 0
		padding-right 10px
		font-weight 700
		float right
		cursor pointer
		-webkit-transition color 0.3s ease-in-out 
		-moz-transition color 0.3s ease-in-out 
		-ms-transition color 0.3s ease-in-out 
		-o-transition color 0.3s ease-in-out 
		transition color 0.3s ease-in-out
		
		&:hover
			color $offWhite
	
	.dessert
		margin-bottom 0

	.tasting .service-text p,
	.custom .service-text p,
	.dessert .service-text p
			padding 0
			
	.tasting .service-text,
	.custom .service-text,
	.dessert .service-text
		text-align center
			
	@media $tablet
		.tasting
			.service-text
				text-align left
				p
					padding-left 50px
				span
					padding-right 25px

		.custom
			.service-text
				text-align left
				p
					padding-right 50px 
					
				span
					text-align right
					padding-right 60px

		.dessert
			// margin-bottom 0
			.service-text 
				text-align left
				p
					padding-left 50px
				
				span
					padding-right 25px
	
	.site-line
		margin 15px auto 20px auto
		
		@media $tablet
			display none