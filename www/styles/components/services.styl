#services
	background $primary
	boxShadow()
	
	h1
		text-transform uppercase
		font-size 42px
		line-height 8px
		background rgba(0,0,0,0)
		  
		@media screen and (min-width: 824px)
			background url('../images/title-bg-service.png')no-repeat center center
			-webkit-background-size contain
			-o-background-size contain
			background-size contain
			
		@media $tablet
			font-size 48px
			line-height 52px
	
		  
	.service-section
		width 100%
		background $white
		boxShadow()
		padding 50px
		margin 50px 0
		-webkit-border-radius 4px 
		border-radius 4px 
		
		@media $desktop
			padding 25px

	.service-title-fill
		fill $primary

	.service-title
		text-align center

	svg
		margin auto 0
		width 100%
		max-width 360px
		max-width 200px
		
		@media $tablet
			max-width 360px

	p
		font-size 16px
		line-height 24px
		letterspacing 1px
		padding 0
		margin 0
		color $primary
		
		@media $tablet
			font-size 20px
			line-height 28px
			padding 0 25px
	
	.tasting
		.service-title
			width 100%
			float left

		.service-text
			width 100%
			float left
			text-align center 

	.custom
		.service-title
			width 100%
			float left

		.service-text
			width 100%
			float left
			text-align center  

	.dessert
		.service-title
			width 100%
			float left 

		.service-text
			width 100%
			float left
			text-align center 
			
	@media $tablet
		.tasting
			.service-title
				width 40%
				float left 

			.service-text
				width 60%
				float left
				text-align right 

		.custom
			.service-title
				width 40%
				float left 

			.service-text
				width 60%
				float left
				text-align left  

		.dessert
			.service-title
				width 40%
				float left 

			.service-text
				width 60%
				float left
				text-align right
